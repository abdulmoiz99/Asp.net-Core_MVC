@model ContactViewModel
@{
    ViewBag.Title = "Contact Us";
}
@section scripts{

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


}
<div class="col-md-6 col-md-offset-3">
    <div>
        <h1 class="text-muted">Contact Us</h1>
    </div>
    <br />
    <div class="well">
        <form method="post">
                
            <div class="form-group">
                <label asp-for="Name">Your Name : </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email : </label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject">Subject :</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-warning"></span>
            </div>
            <label asp-for="Message">Message :</label>
            <textarea cols="23" rows="5" asp-for="Message" class="form-control"> </textarea>
            <span asp-validation-for="Message" class="text-warning"></span>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary" /><i class="fa fa-envelope"></i> Send Message
                <div>@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>